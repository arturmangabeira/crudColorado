<div class="signup-form">
    <form class="cadastro" name="cadastro" action="" method="">
		<h2 id="titleCadastro">Editar Cliente</h2>
		<p>Favor preencha os campos abaixo!</p>
		<hr>
        <div class="form-group">
			<div class="row">				
				<div class="col-xs-6">
                    <input type="text" class="form-control" name="nome" placeholder="Nome" required="required">
                    <input type="hidden" name="codigoCliente" value='@ViewData["CodCliente"]'/>                    
                </div>
			</div>        	
        </div>
        <div class="form-group">
        	<input type="email" class="form-control" name="endereco" placeholder="Endereco" required="required">
        </div>
		<div class="form-group">
            <input type="text" class="form-control" name="cidade" placeholder="Cidade" required="required">
        </div>
		<div class="form-group">
            <input type="text" class="form-control" name="uf" placeholder="UF" required="required">
        </div>        
		<div class="form-group">
            <button type="button" id="btnEditar" class="btn btn-primary btn-lg">Salvar</button>
        </div>
        <div id="menssagem">
        </div>
    </form>
	<div class="hint-text"><a class="nav-link text-dark" asp-area="" asp-controller="Home" id="voltar" asp-action="Index">Voltar</a></div>
</div>

<script> 
    $(document).ready(function(){
        editarCliente(@ViewData["CodCliente"]);    
    });
</script>